# Database Configuration
# Para desarrollo local con PostgreSQL:
# DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/habilux"
# Para producción (Railway/Render te proporcionará esta URL automáticamente):
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Secret (generate with: openssl rand -hex 32 or node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="your-super-secret-jwt-key-here"

# Server Port
PORT=3000

# Client URL (for CORS)
# Desarrollo:
CLIENT_URL="http://localhost:5173"
# Producción (ejemplo):
# CLIENT_URL="https://tu-app.vercel.app"

# Node Environment
NODE_ENV=development
